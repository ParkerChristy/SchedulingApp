         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Button fx:id="loginButton" layoutX="120.0" layoutY="203.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="25.0" prefWidth="130.0" text="Login" />
