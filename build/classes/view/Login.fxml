            <Label fx:id="passwordLabel" text="Password:" GridPane.rowIndex="1">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="usernameText" prefHeight="27.0" prefWidth="112.0" GridPane.columnIndex="1" />
            <PasswordField fx:id="passwordText" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
